# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /redirect                   controllers.Application.redirect
GET     /reverse                    controllers.Application.reverse
GET     /impl                       controllers.Application.notImplemented
GET     /res                        controllers.Clients.resultHelpers(version: Option[String])

# Clients page
GET     /clients/                   controllers.Clients.index
GET     /clients/list               controllers.Clients.list
GET     /clients                    controllers.Clients.greet(name: String ?= "Eric")
GET     /clients/fixed              controllers.Clients.greet(name = "stop")
GET     /clients/$id<[0-9]+>        controllers.Clients.show(id: Long)
GET     /clients/default            controllers.Clients.show(id: Long ?= 4)
GET     /clients/:name              controllers.Clients.greet(name: String)
GET     /clients/version/           controllers.Clients.optionalHandling(version: Option[String])

# Default page stuff
GET     /about                      controllers.Default.redirect(to = "https://www.facebook.com")
GET     /notfound                   controllers.Default.notFound
GET     /error                      controllers.Default.error
GET     /todo                       controllers.Default.todo

# Cookies pages
GET     /cookies                    controllers.Cookies.index
GET     /cookies/clear              controllers.Cookies.clearTheme
GET     /sessions                   controllers.Cookies.addSession
GET     /flash                      controllers.Cookies.flashSession

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)